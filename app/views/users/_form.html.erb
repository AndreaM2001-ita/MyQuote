<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group" style="padding-bottom: 10px;">
    <!--<%= form.label :firstName, style: "display: block" %>-->

    <%= form.text_field :firstName, placeholder: 'First Name', class: 'form-control' %>
  </div>

  <div class="form-group" style="padding-bottom: 10px;">
    <!--<%= form.label :lastName, style: "display: block" %>-->

    <%= form.text_field :lastName, placeholder: 'Last Name', class: 'form-control' %>
  </div>

  <div class="form-group" style="padding-bottom: 10px;">
    <!--<%= form.label :Email, style: "display: block" %>-->

    <%= form.text_field :email, placeholder: 'Email', class: 'form-control' %>
  </div>

  <div class="form-group" style="padding-bottom: 10px;">
    <!--<%= form.label :password, style: "display: block" %>-->
    <%= form.password_field :password, placeholder: 'Choose a strong password', class: 'form-control' %>
  </div>

  <div>
    <!--<%= form.label :status, style: "display: block" %>
    <%= form.text_field :status %>-->
    <%= form.hidden_field :status, value: "Active" %>
  </div>

  <div>
    <!--<%= form.label :is_admin, style: "display: block" %>
    <%= form.check_box :is_admin %>-->
    <%= form.hidden_field :is_admin, value: false %>
  </div>

  <div>
    <!--<%= form.submit %>-->
    <%= form.submit 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>
