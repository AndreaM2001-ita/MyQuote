<h3 style="padding-top: 10px;">Search for Quotes by Philosopher</h3>

<%= form_tag search_path, method: :get do %>
    <div class="form-group" style="padding-bottom: 10px;">
        <%= text_field_tag :philosopher_query, params[:philosopher_query], placeholder: "Enter a Philosopher's name", class: "form-control" %>
    </div>
    <%= submit_tag 'Search Quotes', class: "btn btn-primary" %>
<% end %>

<% if params[:philosopher_query].present? %>

    <% if @quotematch.present? %>
        <h4 style="padding-top: 15px;">Results:</h4>
        <% @quotematch.each do |quote| %>
            <h5 class="text-primary">
                <%= "#{quote.Philosopher.firstName} #{quote.Philosopher.lastName}" %>
            </h5>
            <p><%= quote.quoteText %> <!-- [<a href="/quotes/<%= quote.id %>">Read full quote</a>] --> </p>
            <br />
        <% end %>
    <% else %>
        <p>No matching quotes found.</p>
    <% end %>
    
<% end %>
